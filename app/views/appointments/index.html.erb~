<h1>Appointment Index</h1>

<table class="table table-hover">
  <thead>
    <tr>
    	<th>#</th>
    	<th>Doctor</th>
    	<th>Patient</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr href="<%= appointment_path appointment %>">
      	<td><%= appointment.id %></td>
      	<% if appointment.doctor %>
      		<td><%= link_to appointment.doctor.name, appointment.doctor %></td>
    		<% else %>
    			<td>None</td>
      	<% end %>
      	<% if appointment.patient %>
      		<td><%= link_to appointment.patient.name, appointment.patient %></td>
    		<% else %>
    			<td>None</td>
      	<% end %>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

