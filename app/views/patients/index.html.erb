<h1>Patient Index</h1>

<table class="table">
  <thead>
    <tr>
    	<th>#</th>
      <th>Name</th>
      <th>Priority</th>
      <th>Node</th>
      <th>Doctors</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.id %></td>
      	<td><%= patient.name %></td>
        <td><%= patient.priority %></td>
        <% if not patient.node.nil? -%>
        	<td><%= link_to 'Node ' + patient.node.id.to_s, patient.node %></td>
        <% else -%>
        	<td>None</td>
        <% end -%>
        <td><%= patient.doctors.length %></td>
        <td><%= link_to 'Show', patient_path(patient) %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
        <td><%= link_to 'Destroy', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Patient', new_patient_path %>
